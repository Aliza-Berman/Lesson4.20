@using Lesson4._20.Data;
@model IndexViewModel;
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        @foreach (Ad ad in Model.Ads)
        {
        <div class="well">
            @if (!string.IsNullOrEmpty(ad.Name))
            {
                <h5>Listed by @ad.Name</h5>
            }
            <h5>Listed on @ad.Date.ToLongDateString()</h5>
            <h5>Phone Number: @ad.PhoneNumber</h5>
            <h3>Details:</h3>
            <p>@ad.Offer</p>

            @if (Model.IsLoggedIn && ad.UserId == Model.UserId)
            {
                <form method="post" action="/home/deleted">
                    <input type="hidden" name="id" value="@ad.Id" />
                    <button class="btn btn-danger">Delete Ad</button>
                </form>
            }
        </div>
        }
    </div>
</div>